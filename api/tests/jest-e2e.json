{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "e2e",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/core/(.*)$": "<rootDir>/../../src/core/$1",
    "^@/mock/(.*)$": "<rootDir>/../../tests/mock/$1",
    "^@/common/(.*)$": "<rootDir>/../../src/lib/common/$1",
    "^@/app/(.*)$": "<rootDir>/../../src/lib/app/$1"
  }
}
