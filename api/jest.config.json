{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "tests",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/core/(.*)$": "<rootDir>/../src/core/$1",
    "^@/mock/(.*)$": "<rootDir>/../tests/mock/$1"
  }
}
